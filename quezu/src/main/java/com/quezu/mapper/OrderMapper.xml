<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.quezu.mapper.OrderMapper" >
	<resultMap id="BaseResultMap" type="Order" >
		<id column="o_id" property="id" jdbcType="INTEGER" />
		<result column="p_id" property="productId" jdbcType="INTEGER" />
		<result column="u_owner_id" property="ownerId" jdbcType="INTEGER" />
		<result column="u_renter_id" property="renterId" jdbcType="INTEGER" />
		<result column="o_status" property="status" jdbcType="VARCHAR" />
		<result column="o_days" property="days" jdbcType="INTEGER" />
		<result column="o_months" property="months" jdbcType="INTEGER" />
		<result column="o_startTime" property="startTime" jdbcType="DATE" />
		<result column="o_stopTime" property="stopTime" jdbcType="DATE" />
		<result column="o_total" property="total" jdbcType="DECIMAL" />
		<result column="o_update_Time" property="updateTime" jdbcType="TIMESTAMP" />
	</resultMap>
	
	<sql id="Base_Column_List" >
		o_id, p_id, u_owner_id, u_renter_id, o_status, o_days, o_months, o_startTime, o_stopTime, o_total, o_update_Time
	</sql>
	
	<!-- 插入订单 -->
	<insert id="insertOrder" parameterType="Order">
		insert into tab_order 
			(o_id, p_id, u_owner_id, u_renter_id, o_status, o_days, o_months, o_startTime, o_stopTime, o_total, o_update_Time) 
		values 
			(#{id}, #{productId}, #{ownerId}, #{renterId}, #{status}, #{days}, #{months}, #{startTime}, #{stopTime}, #{total}, #{updateTime})
	</insert>
	
	<!-- 根据订单ID查找订单 -->
	<select id="selectOrderById" parameterType="Integer" resultMap="BaseResultMap">
		select <include refid="Base_Column_List" />
		from tab_order 
		where o_id = #{id}
	</select>
	
</mapper>